{% unless customer %}
<div class='ssw-social-login-widget'>
    <div class="ssw-socialconnect">
        {% render 'ssw-social-buttons' %}
        <div class="ssw-simple-login{% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' %} ssw-social-btn {% endif %}">
            <a title="{{ 'socialshopwave.log_in' | t }}" href="javascript://" data-toggle="ssw-modal" data-target="#login_modal" onclick="trackShopStats('login_popup_view', 'all')">
                <i class="ssw-icon-at"></i>
                {% if shop.metafields.ssw.settings.social_button_view == 'icon_and_text' %}<span>{{ 'socialshopwave.social_login_simple' | t }}</span>{% endif %}
            </a>
        </div>
    </div>
</div>
{% endunless %}